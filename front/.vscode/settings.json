{
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "cSpell.words": [
    "Scrollable",
    "uifabric"
  ],
  "editor.tabSize": 2,
  "search.exclude": { 
    "node_modules": true,
    "build": true
   }
}
